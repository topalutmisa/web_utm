@model VinlandSaga.Web.Models.EditProfileViewModel
@{
    ViewBag.Title = "Редактирование профиля";
    Layout = "~/Views/Shared/_VinlandLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-user-edit"></i> Редактирование профиля</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Profile", FormMethod.Post, new { @class = "auth-form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
                        
                        <div class="mb-4">
                            @Html.LabelFor(m => m.DisplayName, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", placeholder = "Как вас будут видеть другие пользователи" })
                            @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="mb-4">
                            @Html.LabelFor(m => m.About, new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.About, new { @class = "form-control", rows = "4", placeholder = "Расскажите о себе..." })
                            @Html.ValidationMessageFor(m => m.About, "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="mb-4">
                            @Html.LabelFor(m => m.AvatarUrl, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.AvatarUrl, new { @class = "form-control", placeholder = "https://example.com/avatar.jpg" })
                            @Html.ValidationMessageFor(m => m.AvatarUrl, "", new { @class = "text-danger" })
                            <div class="form-text">Введите URL изображения для аватара</div>
                        </div>
                        
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-modern">
                                <i class="fas fa-save"></i> Сохранить изменения
                            </button>
                            <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Отмена
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 