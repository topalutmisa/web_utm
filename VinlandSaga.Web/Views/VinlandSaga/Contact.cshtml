@{
    ViewBag.Title = "Контакты";
}


<main class="contacts-main py-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h1 class="display-3 fw-bold mb-4">Связаться с нами</h1>
                <p class="lead">Вопросы, предложения или идеи? Наша команда фанатов всегда на связи</p>
            </div>
        </div>

        <div class="row g-4">
            
            <div class="col-lg-4">
                <div class="contact-card p-4 mb-4 rounded-4 border">
                    
                    <div class="contact-item d-flex align-items-center p-3 mb-3 rounded-3">
                        <i class="fas fa-envelope fa-2x me-3 text-success"></i>
                        <div>
                            <h3 class="h5 mb-1">Email</h3>
                            <p class="mb-0">vinlandsaga@fancommunity.com</p>
                        </div>
                    </div>

                    
                    <div class="contact-item d-flex align-items-center p-3 mb-3 rounded-3">
                        <i class="fab fa-discord fa-2x me-3 text-success"></i>
                        <div>
                            <h3 class="h5 mb-1">Discord</h3>
                            <p class="mb-0">discord.gg/vinlandsaga</p>
                        </div>
                    </div>

                    
                    <div class="contact-item d-flex align-items-center p-3 rounded-3">
                        <i class="fab fa-telegram-plane fa-2x me-3 text-success"></i>
                        <div>
                            <h3 class="h5 mb-1">Telegram</h3>
                            <p class="mb-0">t.me/vinlandsagafans</p>
                        </div>
                    </div>
                </div>

                
                <div class="mt-4">
                    <h3 class="h4 mb-3">Найдите нас</h3>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="#" class="btn btn-social">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-social">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-social">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a href="#" class="btn btn-social">
                            <i class="fab fa-reddit-alien"></i>
                        </a>
                    </div>
                </div>
            </div>

            
            <div class="col-lg-8">
                <div class="contact-form p-4 rounded-4 border">
                    <h2 class="h3 mb-4">Обратная связь</h2>
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="name" class="form-label">Имя</label>
                                    <input type="text" class="form-control" id="name" placeholder="Введите ваше имя">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="Введите ваш email">
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="subject" class="form-label">Тема</label>
                            <input type="text" class="form-control" id="subject" placeholder="Тема сообщения">
                        </div>

                        <div class="form-group mb-4">
                            <label for="message" class="form-label">Сообщение</label>
                            <textarea class="form-control" id="message" rows="5" placeholder="Ваше сообщение"></textarea>
                        </div>

                        <button type="submit" class="btn btn-modern px-4">Отправить</button>
                    </form>
                </div>
            </div>
        </div>

        
        <div class="row mt-5">
            <div class="col-12">
                <div class="map-card p-4 rounded-4 border">
                    <h3 class="h4 mb-3">Виртуальное расположение команды</h3>
                    <div class="map-container ratio ratio-21x9">
                        <iframe
                            src="https://yandex.ru/map-widget/v1/?um=constructor%3A1a5d6dbd8c7d8b3d8d3c8d3c8d3c8d3c&amp;source=constructor"
                            width="100%" height="400" frameborder="0" loading="lazy">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main> 
