@{
    ViewBag.Title = "Медиа";
}

<section class="media-hero">
    <div class="container-fluid px-0">
        <div class="video-wrapper">
            <iframe src="https://www.youtube.com/embed/H3fS-bZ4e2E" frameborder="0"
                    allow="accelerometer; autoplay; encrypted-media; gyroscope" allowfullscreen>
            </iframe>
        </div>
    </div>
</section>


<main class="media-main py-5">
    <div class="container">
        
        <div class="media-filters mb-5">
            <div class="d-flex flex-wrap gap-3">
                <button class="btn btn-media active" data-filter="all">Все</button>
                <button class="btn btn-media" data-filter="trailers">Трейлеры</button>
                <button class="btn btn-media" data-filter="music">Музыка</button>
                <button class="btn btn-media" data-filter="interviews">Интервью</button>
            </div>
        </div>

        
        <div class="row g-4 media-grid">
            
            <div class="col-lg-4 col-md-6" data-category="trailers">
                <div class="media-card">
                    <div class="card-thumbnail">
                        <img src="~/Content/images/audio/trailer.jpg" alt="Трейлер 1" class="img-fluid"
                             data-video="https://www.youtube.com/embed/H3fS-bZ4e2E">
                        <button class="btn-play" data-bs-toggle="modal" data-bs-target="#videoModal">
                            <i class="fas fa-play"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <h3>Официальный трейлер</h3>
                        <div class="meta-info">
                            <span class="duration">2:35</span>
                            <span class="views">1.2M просмотров</span>
                        </div>
                    </div>
                </div>
            </div>

            
            <div class="col-lg-4 col-md-6" data-category="music">
                <div class="media-card audio-card">
                    <div class="audio-cover">
                        <img src="~/Content/images/audio/soundtrack.jpg" alt="Саундтрек" class="img-fluid">
                    </div>
                    <div class="audio-player">
                        <audio controls>
                            <source src="/images/audio/main-theme.mp3" type="audio/mpeg">
                        </audio>
                    </div>
                    <div class="track-info">
                        <h4>Main Theme</h4>
                        <p>Yutaka Yamada</p>
                    </div>
                </div>
            </div>


            <div class="col-lg-4 col-md-6" data-category="interviews">
                <div class="media-card interview-card">
                    <div class="interview-preview">
                        <img src="~/Content/images/audio/maxresdefault.jpg" alt="Интервью с режиссёром" class="img-fluid"
                             data-video="https://www.youtube.com/embed/Z7BH6YQeWoI">
                    </div>
                    <button class="btn-play" data-bs-toggle="modal" data-bs-target="#videoModal">
                        <i class="fas fa-play"></i>
                    </button>
                    <div class="interview-meta track-info">
                        <h4>Режиссёр о создании</h4>
                        <p class="duration">
                            <i class="fas fa-clock me-2"></i>20 минут
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


<div class="modal fade" id="videoModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body ratio ratio-16x9">
                <iframe id="videoFrame" src="" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            
            const mediaButtons = document.querySelectorAll('.btn-media');
            const mediaSections = document.querySelectorAll('#videos, #music, #interviews');
            
            mediaButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const targetSection = button.getAttribute('data-target');
                    
                    
                    mediaButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    
                    
                    mediaSections.forEach(section => {
                        if (section.id === targetSection) {
                            section.style.display = 'block';
                        } else {
                            section.style.display = 'none';
                        }
                    });
                });
            });
            
            
            const playButtons = document.querySelectorAll('.btn-play');
            playButtons.forEach(button => {
                button.addEventListener('mouseenter', () => {
                    button.classList.add('pulse');
                });
                button.addEventListener('mouseleave', () => {
                    button.classList.remove('pulse');
                });
            });
        });
    </script>
} 
