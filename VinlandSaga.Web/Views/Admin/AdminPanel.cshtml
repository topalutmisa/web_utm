@using System.Collections
@model VinlandSaga.Web.Models.AdminPanelViewModel
@{
    ViewBag.Title = "Панель администратора";
    Layout = "~/Views/Shared/_VinlandLayout.cshtml";
}

<div class="container mt-4">
    <div class="admin-header">
        <h1 class="admin-title">
            <i class="fas fa-shield-alt"></i>
            Панель администратора
        </h1>
        <p class="admin-subtitle">Управление системой Vinland Saga</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Ошибка:</strong> @Model.Error
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i>
            <strong>Успех:</strong> @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Ошибка:</strong> @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show">
            <i class="fas fa-info-circle"></i>
            <strong>Информация:</strong> @TempData["Info"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Статистика системы -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="stats-dashboard">
                <h3 class="dashboard-title">
                    <i class="fas fa-chart-bar"></i>
                    Статистика системы
                </h3>
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="stat-card users">
                            <div class="stat-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-info">
                                <div class="stat-number">@Model.UsersCount</div>
                                <div class="stat-label">Пользователи</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="stat-card topics">
                            <div class="stat-icon">
                                <i class="fas fa-comments"></i>
                            </div>
                            <div class="stat-info">
                                <div class="stat-number">@Model.TopicsCount</div>
                                <div class="stat-label">Темы форума</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="stat-card posts">
                            <div class="stat-icon">
                                <i class="fas fa-comment"></i>
                            </div>
                            <div class="stat-info">
                                <div class="stat-number">@Model.PostsCount</div>
                                <div class="stat-label">Сообщения</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="stat-card news">
                            <div class="stat-icon">
                                <i class="fas fa-newspaper"></i>
                            </div>
                            <div class="stat-info">
                                <div class="stat-number">@Model.NewsCount</div>
                                <div class="stat-label">Новости</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Быстрые действия -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="quick-actions">
                <h3 class="actions-title">
                    <i class="fas fa-bolt"></i>
                    Быстрые действия
                </h3>
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="@Url.Action("Index", "Users")" class="action-card">
                            <div class="action-icon users-icon">
                                <i class="fas fa-users-cog"></i>
                            </div>
                            <div class="action-content">
                                <h5>Управление пользователями</h5>
                                <p>Просмотр, блокировка и управление учетными записями</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="@Url.Action("Index", "Forum")" class="action-card">
                            <div class="action-icon forum-icon">
                                <i class="fas fa-comments"></i>
                            </div>
                            <div class="action-content">
                                <h5>Модерация форума</h5>
                                <p>Управление темами, сообщениями и категориями</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="@Url.Action("Index", "News")" class="action-card">
                            <div class="action-icon news-icon">
                                <i class="fas fa-newspaper"></i>
                            </div>
                            <div class="action-content">
                                <h5>Управление новостями</h5>
                                <p>Создание, редактирование и публикация новостей</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="@Url.Action("Index", "Characters")" class="action-card">
                            <div class="action-icon characters-icon">
                                <i class="fas fa-user-friends"></i>
                            </div>
                            <div class="action-content">
                                <h5>Управление персонажами</h5>
                                <p>Добавление и редактирование персонажей</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="@Url.Action("Index", "Test")" class="action-card">
                            <div class="action-icon test-icon">
                                <i class="fas fa-tools"></i>
                            </div>
                            <div class="action-content">
                                <h5>Тестовая панель</h5>
                                <p>Инициализация данных и диагностика системы</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="@Url.Action("DatabaseConnection", "Test")" class="action-card">
                            <div class="action-icon db-icon">
                                <i class="fas fa-database"></i>
                            </div>
                            <div class="action-content">
                                <h5>Статус базы данных</h5>
                                <p>Проверка подключения и состояния БД</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="@Url.Action("SystemInfo", "Admin")" class="action-card">
                            <div class="action-icon system-icon">
                                <i class="fas fa-server"></i>
                            </div>
                            <div class="action-content">
                                <h5>Информация о системе</h5>
                                <p>Версия, производительность и конфигурация</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="@Url.Action("UserActivity", "Admin")" class="action-card">
                            <div class="action-icon activity-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div class="action-content">
                                <h5>Активность пользователей</h5>
                                <p>Статистика и аналитика активности</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Системные операции -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="system-operations">
                <h3 class="operations-title">
                    <i class="fas fa-cogs"></i>
                    Системные операции
                </h3>
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-3">
                        @using (Html.BeginForm("ClearCache", "Admin", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="operation-btn cache-btn" onclick="return confirm('Вы уверены, что хотите очистить кэш?')">
                                <div class="operation-icon">
                                    <i class="fas fa-broom"></i>
                                </div>
                                <div class="operation-content">
                                    <h6>Очистить кэш</h6>
                                    <small>Перезагрузка приложения</small>
                                </div>
                            </button>
                        }
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        @using (Html.BeginForm("BackupDatabase", "Admin", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="operation-btn backup-btn" onclick="return confirm('Создать резервную копию базы данных?')">
                                <div class="operation-icon">
                                    <i class="fas fa-download"></i>
                                </div>
                                <div class="operation-content">
                                    <h6>Резервная копия</h6>
                                    <small>Создать backup БД</small>
                                </div>
                            </button>
                        }
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="@Url.Action("Index", "Test")" class="operation-btn test-btn">
                            <div class="operation-icon">
                                <i class="fas fa-flask"></i>
                            </div>
                            <div class="operation-content">
                                <h6>Тестирование</h6>
                                <small>Диагностика системы</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Последняя активность -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="activity-card">
                <h4 class="activity-title">
                    <i class="fas fa-user-plus"></i>
                    Последние пользователи
                </h4>
                @if (!string.IsNullOrEmpty(Model.UserError))
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        @Model.UserError
                    </div>
                }
                @if (Model.RecentUsers != null && Model.RecentUsers.Any())
                {
                    <div class="activity-list">
                        @foreach (var user in Model.RecentUsers)
                        {
                            <div class="activity-item">
                                <div class="activity-info">
                                    <strong>@user.Username</strong>
                                    <small class="text-muted">@user.Email</small>
                                </div>
                                <div class="activity-time">
                                    @user.RegistrationDate.ToString("dd.MM.yyyy")
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">Нет данных о пользователях</p>
                }
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="activity-card">
                <h4 class="activity-title">
                    <i class="fas fa-comments"></i>
                    Последние темы форума
                </h4>
                @if (!string.IsNullOrEmpty(Model.TopicError))
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        @Model.TopicError
                    </div>
                }
                @if (Model.RecentTopics != null && Model.RecentTopics.Any())
                {
                    <div class="activity-list">
                        @foreach (var topic in Model.RecentTopics)
                        {
                            <div class="activity-item">
                                <div class="activity-info">
                                    <strong>@topic.Title</strong>
                                    <small class="text-muted">Просмотров: @topic.ViewsCount, Ответов: @topic.PostsCount</small>
                                </div>
                                <div class="activity-time">
                                    @topic.CreatedDate.ToString("dd.MM.yyyy")
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">Нет данных о темах форума</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
.admin-header {
    text-align: center;
    margin-bottom: 40px;
    padding: 30px;
    background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
    color: white;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(231, 76, 60, 0.3);
}

.admin-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 10px;
}

.admin-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
    margin-bottom: 0;
}

.stats-dashboard, .quick-actions {
    background: white;
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
}

.dashboard-title, .actions-title {
    color: #2c3e50;
    margin-bottom: 25px;
    font-weight: 600;
    font-size: 1.5rem;
}

.stat-card {
    background: white;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
    display: flex;
    align-items: center;
    gap: 20px;
    transition: all 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
}

.stat-card.users { border-left: 4px solid #3498db; }
.stat-card.topics { border-left: 4px solid #2ecc71; }
.stat-card.posts { border-left: 4px solid #f39c12; }
.stat-card.news { border-left: 4px solid #9b59b6; }

.stat-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
}

.stat-card.users .stat-icon { background: #3498db; }
.stat-card.topics .stat-icon { background: #2ecc71; }
.stat-card.posts .stat-icon { background: #f39c12; }
.stat-card.news .stat-icon { background: #9b59b6; }

.stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 5px;
}

.stat-label {
    color: #7f8c8d;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.action-card {
    display: block;
    background: white;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    height: 100%;
}

.action-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    text-decoration: none;
    color: inherit;
}

.action-icon {
    width: 50px;
    height: 50px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
    color: white;
    margin-bottom: 15px;
}

.users-icon { background: linear-gradient(135deg, #3498db, #2980b9); }
.forum-icon { background: linear-gradient(135deg, #2ecc71, #27ae60); }
.news-icon { background: linear-gradient(135deg, #9b59b6, #8e44ad); }
.characters-icon { background: linear-gradient(135deg, #f39c12, #e67e22); }
.test-icon { background: linear-gradient(135deg, #e74c3c, #c0392b); }
.db-icon { background: linear-gradient(135deg, #34495e, #2c3e50); }
.system-icon { background: linear-gradient(135deg, #16a085, #1abc9c); }
.activity-icon { background: linear-gradient(135deg, #8e44ad, #9b59b6); }

.action-content h5 {
    color: #2c3e50;
    margin-bottom: 10px;
    font-weight: 600;
}

.action-content p {
    color: #7f8c8d;
    margin-bottom: 0;
    font-size: 0.9rem;
    line-height: 1.4;
}

.activity-card {
    background: white;
    border-radius: 15px;
    padding: 25px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
    height: 100%;
}

.activity-title {
    color: #2c3e50;
    margin-bottom: 20px;
    font-weight: 600;
    font-size: 1.2rem;
}

.activity-list {
    max-height: 300px;
    overflow-y: auto;
}

.activity-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 0;
    border-bottom: 1px solid #f0f0f0;
}

.activity-item:last-child {
    border-bottom: none;
}

.activity-info strong {
    color: #2c3e50;
    display: block;
    margin-bottom: 3px;
}

.activity-time {
    color: #7f8c8d;
    font-size: 0.85rem;
    white-space: nowrap;
}

@@media (max-width: 768px) {
    .admin-title {
        font-size: 2rem;
    }
    
    .stat-card {
        margin-bottom: 15px;
    }
    
    .action-card {
        margin-bottom: 20px;
    }
    
    .operation-btn {
        margin-bottom: 15px;
    }
}

.system-operations {
    background: white;
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
}

.operations-title {
    color: #2c3e50;
    margin-bottom: 25px;
    font-weight: 600;
    font-size: 1.5rem;
}

.operation-btn {
    display: flex;
    align-items: center;
    gap: 15px;
    width: 100%;
    padding: 20px;
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    cursor: pointer;
}

.operation-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    text-decoration: none;
    color: inherit;
}

.cache-btn:hover { border-color: #f39c12; }
.backup-btn:hover { border-color: #27ae60; }
.test-btn:hover { border-color: #e74c3c; }

.operation-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    color: white;
}

.cache-btn .operation-icon { background: #f39c12; }
.backup-btn .operation-icon { background: #27ae60; }
.test-btn .operation-icon { background: #e74c3c; }

.operation-content h6 {
    margin: 0 0 5px 0;
    color: #2c3e50;
    font-weight: 600;
}

.operation-content small {
    color: #7f8c8d;
    font-size: 0.85rem;
}
</style> 