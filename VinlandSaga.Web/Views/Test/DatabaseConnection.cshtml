@{
    ViewBag.Title = "Тест подключения к БД";
    Layout = "~/Views/Shared/_VinlandLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Тест подключения к базе данных</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.CanConnect == true)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> @ViewBag.Message
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h5>Количество ролей</h5>
                                        <h2 class="text-primary">@ViewBag.RolesCount</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h5>Количество пользователей</h5>
                                        <h2 class="text-success">@ViewBag.UsersCount</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @ViewBag.Message
                        </div>
                        
                        if (ViewBag.InnerError != null)
                        {
                            <div class="alert alert-warning">
                                <strong>Детали ошибки:</strong> @ViewBag.InnerError
                            </div>
                        }
                        
                        <div class="mt-3">
                            <h5>Возможные решения:</h5>
                            <ul>
                                <li>Убедитесь, что PostgreSQL запущен</li>
                                <li>Проверьте строку подключения в Web.config</li>
                                <li>Убедитесь, что база данных VinlandSaga создана</li>
                                <li>Проверьте права доступа пользователя postgres</li>
                                <li>Выполните миграции: Update-Database в Package Manager Console</li>
                            </ul>
                        </div>
                    }
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "VinlandSaga")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Вернуться на главную
                        </a>
                        <a href="@Url.Action("InitializeRoles", "Test")" class="btn btn-warning">
                            <i class="fas fa-cogs"></i> Инициализировать роли
                        </a>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-success">
                            <i class="fas fa-user-plus"></i> Попробовать регистрацию
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 