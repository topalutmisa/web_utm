@{
    ViewBag.Title = "Тестовая панель - Инициализация данных";
    Layout = "~/Views/Shared/_VinlandLayout.cshtml";
}

<div class="container mt-4">
    <div class="test-panel-header">
        <h1 class="test-title">
            <i class="fas fa-tools"></i>
            Тестовая панель Vinland Saga
        </h1>
        <p class="test-subtitle">Инициализация и управление тестовыми данными</p>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Ошибка:</strong> @ViewBag.Error
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i>
            <strong>Успех:</strong> @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Ошибка:</strong> @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Предупреждение:</strong> @TempData["Warning"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Статистика базы данных -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="stats-card">
                <h3 class="stats-title">
                    <i class="fas fa-database"></i>
                    Статистика базы данных
                </h3>
                <div class="row">
                    <div class="col-md-2">
                        <div class="stat-item">
                            <div class="stat-icon @(ViewBag.DatabaseExists == true ? "text-success" : "text-danger")">
                                <i class="fas fa-@(ViewBag.DatabaseExists == true ? "check-circle" : "times-circle")"></i>
                            </div>
                            <div class="stat-label">База данных</div>
                            <div class="stat-value">@(ViewBag.DatabaseExists == true ? "Подключена" : "Не найдена")</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="stat-item">
                            <div class="stat-icon text-primary">
                                <i class="fas fa-users-cog"></i>
                            </div>
                            <div class="stat-label">Роли</div>
                            <div class="stat-value">@(ViewBag.RolesCount ?? 0)</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="stat-item">
                            <div class="stat-icon text-info">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-label">Пользователи</div>
                            <div class="stat-value">@(ViewBag.UsersCount ?? 0)</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="stat-item">
                            <div class="stat-icon text-warning">
                                <i class="fas fa-folder"></i>
                            </div>
                            <div class="stat-label">Категории</div>
                            <div class="stat-value">@(ViewBag.CategoriesCount ?? 0)</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="stat-item">
                            <div class="stat-icon text-success">
                                <i class="fas fa-comments"></i>
                            </div>
                            <div class="stat-label">Темы</div>
                            <div class="stat-value">@(ViewBag.TopicsCount ?? 0)</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="stat-item">
                            <div class="stat-icon text-secondary">
                                <i class="fas fa-comment"></i>
                            </div>
                            <div class="stat-label">Сообщения</div>
                            <div class="stat-value">@(ViewBag.PostsCount ?? 0)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Панель инициализации -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="init-card">
                <div class="init-header">
                    <h4 class="init-title">
                        <i class="fas fa-users-cog"></i>
                        Инициализация ролей
                    </h4>
                    <p class="init-description">Создание базовых ролей системы</p>
                </div>
                <div class="init-body">
                    <p>Создает роли: Administrator, Moderator, User, Artist</p>
                    <a href="@Url.Action("InitializeRoles", "Test")" class="btn btn-init btn-primary">
                        <i class="fas fa-play"></i>
                        Инициализировать роли
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="init-card">
                <div class="init-header">
                    <h4 class="init-title">
                        <i class="fas fa-user-shield"></i>
                        Создание администратора
                    </h4>
                    <p class="init-description">Создание учетной записи администратора</p>
                </div>
                <div class="init-body">
                    <p><strong>Username:</strong> admin<br>
                       <strong>Email:</strong> admin@vinlandsaga.com<br>
                       <strong>Password:</strong> Admin123!</p>
                    @using (Html.BeginForm("InitializeAdmin", "Test", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-init btn-success">
                            <i class="fas fa-user-plus"></i>
                            Создать администратора
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="init-card">
                <div class="init-header">
                    <h4 class="init-title">
                        <i class="fas fa-folder-plus"></i>
                        Создание категорий
                    </h4>
                    <p class="init-description">Создание категорий для форума</p>
                </div>
                <div class="init-body">
                    <p>Создает категории: Manga Discussion, Anime Discussion, Character Analysis и др.</p>
                    @using (Html.BeginForm("InitializeCategories", "Test", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-init btn-warning">
                            <i class="fas fa-folder-plus"></i>
                            Создать категории
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="init-card">
                <div class="init-header">
                    <h4 class="init-title">
                        <i class="fas fa-database"></i>
                        Тестовые данные
                    </h4>
                    <p class="init-description">Создание тестовых тем и сообщений</p>
                </div>
                <div class="init-body">
                    <p>Создает несколько тестовых тем форума с первыми сообщениями</p>
                    @using (Html.BeginForm("InitializeSampleData", "Test", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-init btn-info">
                            <i class="fas fa-plus-circle"></i>
                            Создать тестовые данные
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Быстрые ссылки -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="quick-links-card">
                <h4 class="quick-links-title">
                    <i class="fas fa-external-link-alt"></i>
                    Быстрые ссылки
                </h4>
                <div class="quick-links-grid">
                    <a href="@Url.Action("DatabaseConnection", "Test")" class="quick-link">
                        <i class="fas fa-plug"></i>
                        Тест подключения к БД
                    </a>
                    <a href="@Url.Action("TestRegistration", "Test")" class="quick-link">
                        <i class="fas fa-user-plus"></i>
                        Тест регистрации
                    </a>
                    <a href="@Url.Action("AuthCheck", "Test")" class="quick-link">
                        <i class="fas fa-user-shield"></i>
                        Проверка аутентификации
                    </a>
                    <a href="@Url.Action("CheckUserData", "Test")" class="quick-link">
                        <i class="fas fa-database"></i>
                        Диагностика пользователей
                    </a>
                    <a href="@Url.Action("Index", "Forum")" class="quick-link">
                        <i class="fas fa-comments"></i>
                        Перейти к форуму
                    </a>
                    <a href="@Url.Action("Login", "Account")" class="quick-link">
                        <i class="fas fa-sign-in-alt"></i>
                        Страница входа
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Инструкции -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="instructions-card">
                <h4 class="instructions-title">
                    <i class="fas fa-info-circle"></i>
                    Инструкции по инициализации
                </h4>
                <ol class="instructions-list">
                    <li><strong>Инициализируйте роли</strong> - создает базовые роли системы</li>
                    <li><strong>Создайте администратора</strong> - создает учетную запись админа с правами</li>
                    <li><strong>Создайте категории</strong> - добавляет категории для форума</li>
                    <li><strong>Добавьте тестовые данные</strong> - создает примеры тем и сообщений</li>
                    <li><strong>Перейдите к форуму</strong> - проверьте работу форума</li>
                </ol>
                <div class="alert alert-info mt-3">
                    <i class="fas fa-lightbulb"></i>
                    <strong>Совет:</strong> Выполняйте инициализацию в указанном порядке для корректной работы системы.
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.test-panel-header {
    text-align: center;
    margin-bottom: 40px;
    padding: 30px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.test-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 10px;
}

.test-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
    margin-bottom: 0;
}

.stats-card {
    background: white;
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
}

.stats-title {
    color: #2c3e50;
    margin-bottom: 25px;
    font-weight: 600;
}

.stat-item {
    text-align: center;
    padding: 15px;
}

.stat-icon {
    font-size: 2rem;
    margin-bottom: 10px;
}

.stat-label {
    font-size: 0.9rem;
    color: #7f8c8d;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 5px;
}

.stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2c3e50;
}

.init-card {
    background: white;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
    height: 100%;
    transition: all 0.3s ease;
}

.init-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.init-header {
    padding: 25px 25px 15px;
    border-bottom: 1px solid #f0f0f0;
}

.init-title {
    color: #2c3e50;
    margin-bottom: 8px;
    font-weight: 600;
}

.init-description {
    color: #7f8c8d;
    margin-bottom: 0;
    font-size: 0.95rem;
}

.init-body {
    padding: 20px 25px 25px;
}

.btn-init {
    padding: 12px 25px;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    width: 100%;
}

.btn-init:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

.quick-links-card, .instructions-card {
    background: white;
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
}

.quick-links-title, .instructions-title {
    color: #2c3e50;
    margin-bottom: 25px;
    font-weight: 600;
}

.quick-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
}

.quick-link {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 15px 20px;
    background: #f8f9fa;
    border-radius: 10px;
    text-decoration: none;
    color: #2c3e50;
    transition: all 0.3s ease;
    border: 1px solid #e0e0e0;
}

.quick-link:hover {
    background: #667eea;
    color: white;
    text-decoration: none;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
}

.instructions-list {
    color: #2c3e50;
    line-height: 1.8;
}

.instructions-list li {
    margin-bottom: 10px;
}

@@media (max-width: 768px) {
    .test-title {
        font-size: 2rem;
    }
    
    .quick-links-grid {
        grid-template-columns: 1fr;
    }
    
    .stat-item {
        margin-bottom: 20px;
    }
}
</style> 