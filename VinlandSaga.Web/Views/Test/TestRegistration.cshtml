@{
    ViewBag.Title = "Тест регистрации";
    Layout = "~/Views/Shared/_VinlandLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Тест регистрации пользователя</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Success == true)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> @ViewBag.Message
                        </div>
                        
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5>Данные зарегистрированного пользователя:</h5>
                                <ul class="list-unstyled">
                                    <li><strong>ID:</strong> @ViewBag.UserId</li>
                                    <li><strong>Username:</strong> @ViewBag.Username</li>
                                    <li><strong>Email:</strong> @ViewBag.Email</li>
                                </ul>
                            </div>
                        </div>
                    }
                    else if (ViewBag.Success == false)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @ViewBag.Message
                        </div>
                        
                        if (ViewBag.InnerError != null)
                        {
                            <div class="alert alert-warning">
                                <strong>Детали ошибки:</strong> @ViewBag.InnerError
                            </div>
                        }
                        
                        if (ViewBag.ValidationErrors != null)
                        {
                            <div class="alert alert-danger">
                                <strong>Ошибки валидации:</strong>
                                <ul class="mb-0 mt-2">
                                    @foreach (string error in ViewBag.ValidationErrors)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            </div>
                        }
                        
                        <div class="mt-3">
                            <h5>Возможные причины:</h5>
                            <ul>
                                <li>Проблема с подключением к базе данных</li>
                                <li>Ошибка в Entity Framework</li>
                                <li>Проблема с созданием ролей</li>
                                <li>Нарушение ограничений базы данных</li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Эта страница создаст тестового пользователя для проверки работы регистрации.
                        </div>
                        
                        <div class="text-center">
                            <p>Будут использованы автоматически сгенерированные данные:</p>
                            <ul class="list-group">
                                <li class="list-group-item">👤 <strong>Username:</strong> testuser_[timestamp]</li>
                                <li class="list-group-item">📧 <strong>Email:</strong> test_[timestamp]@@example.com</li>
                                <li class="list-group-item">🔒 <strong>Password:</strong> TestPassword123!</li>
                            </ul>
                        </div>
                    }
                    
                    @if (ViewBag.TestData != null)
                    {
                        <div class="mt-3">
                            <small class="text-muted">Тестовые данные: @ViewBag.TestData</small>
                        </div>
                    }
                    
                    <div class="mt-4 text-center">
                        <a href="@Url.Action("DatabaseConnection", "Test")" class="btn btn-secondary">
                            <i class="fas fa-database"></i> Тест подключения к БД
                        </a>
                        <a href="@Url.Action("InitializeRoles", "Test")" class="btn btn-warning">
                            <i class="fas fa-cogs"></i> Инициализировать роли
                        </a>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-success">
                            <i class="fas fa-user-plus"></i> Обычная регистрация
                        </a>
                        <a href="@Url.Action("Index", "VinlandSaga")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Главная
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 